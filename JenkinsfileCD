pipeline {
    agent any

    parameters {
        choice(name: 'CHOICE', choices: ['001', '002', '003', '004', '005'], description: 'Pick something')
    }

    stages {
        stage('Deploy') {
            steps {
                sh 'gcloud auth activate-service-account acc-for-fp-epam@fp-epam.iam.gserviceaccount.com --key-file="/opt/fp-epam-bfdf0a8eea4b.json"'
                sh 'gcloud auth configure-docker'
                sh 'gcloud container clusters get-credentials gke-autopilot --region europe-central2 --project fp-epam'
                echo 'Deploy new version...'
                // Плавающее обновление контейнеров "petclinic" развёртывания "petclinic", обновление образа
                echo "Choice: v${params.CHOICE}"
                sh "kubectl set image deployment/petclinic petclinic=gcr.io/fp-epam/fp-petclinic:v${params.CHOICE}"

                // Откатиться к предыдущему развёртыванию
                // kubectl rollout undo deployment/petclinic
            }
        }
    }
}
